<tool id="env_debug" name="Env Debug" version="0.1.0">
<description>Print out Perl environment</description>
   <command detect_errors="aggressive"><![CDATA[
	sh $__tool_directory__/script_runner.sh
	--script env_debug
	--outfile "$outfile"
  ]]></command>
  <outputs>
    <data name="outfile" format="txt" label="Environment" />
  </outputs>
  <help>
Prints out the Perl version and @INC.
  </help>

</tool>
